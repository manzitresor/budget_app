 <%= form_with(model: entity, url: group_entities_path(@group)) do |form| %>
  <% if entity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entity.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% entity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control border-success my-1 p-2" %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class: "form-control border-success my-1 p-2" %>
  </div>

   <div class="mt-4">
    <%= form.collection_select(:selected_group_id, Group.where(user_id: current_user.id), :id, :name, { include_blank: 'Select Category' }, { class: 'form-select', id: 'group-select', required: true }) %>
  </div>



  <div>
    <%= form.submit "Save", class: "btn btn-success my-3 px-5" %>
    <%= link_to "Back", groups_path, class: "btn back-btn btn-outline-success" %>
  </div>
<% end %> 
