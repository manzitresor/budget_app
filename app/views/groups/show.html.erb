
     <% if @entities.any? %>
          <% @entities.each do |entity| %>
            <div>
              <p class="text-center border text-gray-600 p-1"><%= entity.name %></p>
              <p class="text-center border text-text_color font-semibold p-1">$<%= entity.amount %></p>
            </div>
          <% end %>
        <% else %>
          <div>
            <p colspan="2" class="text-center border text-gray-600 p-1">No Transaction.</p>
          </div>
        <% end %>
        <div class="d-flex justify-content-center gap-2">
          <%= link_to "New Transaction", new_group_entity_path(@group), class: "btn btn-outline-success"%>
          <%= link_to "Back", groups_path, class: "btn back-btn btn-outline-success" %>
        </div> 
